---
interface Props {
  variant?: 'dark' | 'light';
  class?: string;
}

const { variant = 'dark', class: className = '' } = Astro.props;
const primaryColor = variant === 'light' ? '#ffffff' : 'var(--color-text)';
const lightColor = variant === 'light' ? 'rgba(255,255,255,0.5)' : 'var(--color-text-lighter)';
