---
import Logo from './Logo.astro';

const currentYear = new Date().getFullYear();

const navItems = [
  { label: 'Diensten', href: '/diensten' },
  { label: 'Over mij', href: '/over-mij' },
  { label: 'Contact', href: '/contact' },
];
---

<footer class="bg-navy text-white">
  <div class="mx-auto max-w-[var(--container-max)] px-8 md:px-12 py-16 md:py-24">
    {/* Top section — large serif tagline */}
    <p class="font-[var(--font-serif)] text-2xl md:text-3xl text-gray-300 max-w-xl leading-snug mb-16 md:mb-20">
      Digital marketing leiderschap, precies wanneer je het nodig hebt.
    </p>

    {/* Divider */}
    <div class="h-px bg-gray-700/50 mb-12"></div>

    {/* Grid — asymmetric columns */}
    <div class="grid grid-cols-1 md:grid-cols-12 gap-10 md:gap-8">
      {/* Brand + description — wider column */}
      <div class="md:col-span-5 space-y-5">
        <Logo variant="light" />
        <p class="text-gray-500 text-sm leading-relaxed max-w-sm">
          Interim, fractional & freelance management en strategische diensten op het gebied van Digital Marketing & E-commerce.
        </p>
      </div>

      {/* Navigation */}
      <div class="md:col-span-3 md:col-start-7">
        <h4 class="text-[11px] uppercase tracking-[0.2em] text-gray-500 mb-5">Navigatie</h4>
        <ul class="space-y-3">
          {navItems.map((item) => (
            <li>
              <a href={item.href} class="text-gray-300 hover:text-white text-sm no-underline">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Contact */}
      <div class="md:col-span-3">
        <h4 class="text-[11px] uppercase tracking-[0.2em] text-gray-500 mb-5">Contact</h4>
        <ul class="space-y-3 text-sm">
          <li>
            <a href="mailto:info@krtdigital.nl" class="text-gray-300 hover:text-white no-underline">
              info@krtdigital.nl
            </a>
          </li>
          <li>
            <a
              href="https://www.linkedin.com/in/joostkaart"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-300 hover:text-white no-underline inline-flex items-center gap-2"
            >
              <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
          </li>
          <li class="text-gray-500">
            KvK: 80708293
          </li>
        </ul>
      </div>
    </div>

    {/* Bottom bar */}
    <div class="mt-16 pt-8 border-t border-gray-700/50 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-gray-600 text-xs">
        &copy; {currentYear} KRT Digital
      </p>
      <p class="text-gray-600 text-xs">
        Randstad, Nederland
      </p>
    </div>
  </div>
</footer>
