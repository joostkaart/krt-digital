---
interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonHref?: string;
}

const {
  title = 'Klaar om te sparren?',
  description = 'Vertel me over je uitdaging. Ik denk graag vrijblijvend met je mee.',
  buttonText = 'Neem contact op',
  buttonHref = '/contact',
} = Astro.props;
---

<section class="bg-navy text-white">
  <div class="mx-auto max-w-[var(--container-max)] px-8 md:px-12 py-24 md:py-32">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8 md:gap-16 items-center">
      {/* Left: large serif heading */}
      <div class="md:col-span-7">
        <h2 class="text-4xl md:text-5xl lg:text-6xl text-white leading-[1.1]">{title}</h2>
      </div>

      {/* Right: description + CTA */}
      <div class="md:col-span-5">
        <p class="text-gray-400 text-base leading-relaxed mb-8">{description}</p>
        <a
          href={buttonHref}
          class="inline-flex items-center gap-3 no-underline group"
        >
          <span class="text-[12px] uppercase tracking-[0.15em] font-medium text-accent group-hover:text-accent-hover">
            {buttonText}
          </span>
          <span class="w-10 h-px bg-accent group-hover:w-14 transition-all duration-300"></span>
        </a>
      </div>
    </div>
  </div>
</section>
