---
import BaseLayout from '../layouts/BaseLayout.astro';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact — KRT Digital",
  "url": "https://krtdigital.nl/contact",
  "mainEntity": {
    "@type": "ProfessionalService",
    "name": "KRT Digital",
    "email": "info@krtdigital.nl",
    "url": "https://krtdigital.nl",
    "founder": { "@type": "Person", "name": "Joost Kaart" }
  }
};
---

<BaseLayout
  title="Contact"
  description="Neem contact op met Joost Kaart van KRT Digital. Interim, fractional en freelance digital marketing diensten. Vrijblijvend kennismaken."
  structuredData={structuredData}
>
  {/* ========== PAGE HEADER — Editorial with illustration ========== */}
  <section class="relative overflow-hidden">
    {/* Abstract communication illustration */}
    <div class="absolute right-0 top-0 w-[40%] h-full pointer-events-none select-none hidden md:block" aria-hidden="true">
      <svg class="w-full h-full opacity-[0.05]" viewBox="0 0 500 400" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMaxYMid slice">
        {/* Flowing conversation lines */}
        <path d="M50 350 Q150 300 200 200 Q250 100 400 80" stroke="#d4622a" stroke-width="2"/>
        <path d="M100 380 Q180 320 250 230 Q320 140 450 100" stroke="#0f1923" stroke-width="1.5"/>
        {/* Speech bubble shapes — abstract */}
        <path d="M300 60 Q340 30 380 60 Q410 90 380 110 Q350 130 340 150 L330 130 Q290 120 280 90 Q270 60 300 60Z" stroke="#d4622a" stroke-width="1.2" fill="#d4622a" fill-opacity="0.04"/>
        <path d="M120 200 Q150 175 180 200 Q200 225 175 240 Q155 255 150 270 L145 250 Q115 245 108 220 Q100 200 120 200Z" stroke="#0f1923" stroke-width="1" fill="#0f1923" fill-opacity="0.03"/>
        {/* Connecting dots */}
        <circle cx="200" cy="200" r="4" fill="#d4622a" opacity="0.3"/>
        <circle cx="350" cy="90" r="5" fill="#d4622a" opacity="0.2"/>
        <circle cx="160" cy="240" r="3" fill="#0f1923" opacity="0.2"/>
        <circle cx="400" cy="80" r="3" fill="#0f1923" opacity="0.15"/>
        {/* Signal arcs */}
        <path d="M380 55 Q400 40 420 55" stroke="#d4622a" stroke-width="0.8" fill="none"/>
        <path d="M370 45 Q400 25 430 45" stroke="#d4622a" stroke-width="0.6" fill="none"/>
      </svg>
    </div>

    <div class="mx-auto max-w-[var(--container-max)] px-8 md:px-12 py-20 md:py-32 relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
        <div class="md:col-span-8">
          <span class="text-[11px] uppercase tracking-[0.25em] text-text-lighter font-medium">Contact</span>
          <h1 class="text-5xl md:text-6xl lg:text-7xl text-navy mt-4 leading-[1.05]">
            Laten we <em class="text-accent not-italic">praten</em>
          </h1>
        </div>
        <div class="md:col-span-4 md:col-start-9 flex items-end">
          <p class="text-text-light text-base leading-relaxed">
            Benieuwd wat ik voor je kan betekenen? Stuur me een bericht en ik neem zo snel mogelijk contact op.
          </p>
        </div>
      </div>
    </div>
  </section>

  {/* ========== CONTACT CONTENT — Editorial asymmetric grid ========== */}
  <section>
    <div class="mx-auto max-w-[var(--container-max)] px-8 md:px-12 pb-24 md:pb-32">
      <div class="border-t border-border"></div>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 lg:gap-8 pt-16 md:pt-20">
        {/* Left: Contact details — editorial style */}
        <div class="lg:col-span-4 lg:pr-8">
          <span class="text-[11px] uppercase tracking-[0.25em] text-text-lighter font-medium">Direct contact</span>

          <div class="mt-8 space-y-8">
            {/* Email */}
            <div>
              <div class="flex items-center gap-2 mb-1">
                <svg class="w-4 h-4 text-accent/40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="2" y="4" width="20" height="16" rx="2"/>
                  <path d="M2 7l10 6 10-6" stroke-linecap="round"/>
                </svg>
                <span class="text-[11px] uppercase tracking-[0.15em] text-text-lighter">E-mail</span>
              </div>
              <a href="mailto:info@krtdigital.nl" class="block text-navy hover:text-accent text-base no-underline">
                info@krtdigital.nl
              </a>
            </div>

            {/* LinkedIn */}
            <div>
              <div class="flex items-center gap-2 mb-1">
                <svg class="w-4 h-4 text-accent/40" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                <span class="text-[11px] uppercase tracking-[0.15em] text-text-lighter">LinkedIn</span>
              </div>
              <a
                href="https://www.linkedin.com/in/joostkaart"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-navy hover:text-accent text-base mt-1 no-underline"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                linkedin.com/in/joostkaart
              </a>
            </div>

            {/* Location */}
            <div>
              <div class="flex items-center gap-2 mb-1">
                <svg class="w-4 h-4 text-accent/40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
                  <circle cx="12" cy="9" r="2.5"/>
                </svg>
                <span class="text-[11px] uppercase tracking-[0.15em] text-text-lighter">Locatie</span>
              </div>
              <p class="text-navy text-base">Randstad, Nederland</p>
            </div>
          </div>

          {/* Info note */}
          <div class="mt-12 pt-8 border-t border-border">
            <p class="font-[var(--font-serif)] text-lg text-navy leading-snug mb-3">
              Vrijblijvend kennismaken?
            </p>
            <p class="text-text-light text-sm leading-relaxed">
              Ik reageer doorgaans binnen 24 uur. In een eerste gesprek kijken we samen naar je situatie en of er een goede match is.
            </p>
          </div>
        </div>

        {/* Right: Contact form — refined editorial styling */}
        <div class="lg:col-span-7 lg:col-start-6">
          <span class="text-[11px] uppercase tracking-[0.25em] text-text-lighter font-medium">Stuur een bericht</span>

          <form
            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            action="/contact/bedankt"
            class="mt-8 space-y-6"
          >
            <p class="hidden">
              <label>Vul dit niet in: <input name="bot-field" /></label>
            </p>
            <input type="hidden" name="form-name" value="contact" />

            {/* Name */}
            <div>
              <label for="naam" class="block text-[11px] uppercase tracking-[0.15em] text-text-lighter mb-2">
                Naam <span class="text-accent">*</span>
              </label>
              <input
                type="text"
                id="naam"
                name="naam"
                required
                autocomplete="name"
                placeholder="Je naam"
                class="w-full px-0 py-3 border-0 border-b border-border bg-transparent text-text text-base placeholder:text-text-lighter/50 focus:outline-none focus:border-navy transition-colors"
              />
            </div>

            {/* Email */}
            <div>
              <label for="email" class="block text-[11px] uppercase tracking-[0.15em] text-text-lighter mb-2">
                E-mailadres <span class="text-accent">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                autocomplete="email"
                placeholder="je@email.nl"
                class="w-full px-0 py-3 border-0 border-b border-border bg-transparent text-text text-base placeholder:text-text-lighter/50 focus:outline-none focus:border-navy transition-colors"
              />
            </div>

            {/* Message */}
            <div>
              <label for="bericht" class="block text-[11px] uppercase tracking-[0.15em] text-text-lighter mb-2">
                Bericht <span class="text-accent">*</span>
              </label>
              <textarea
                id="bericht"
                name="bericht"
                required
                rows="5"
                placeholder="Vertel me kort over je situatie en hoe ik je kan helpen..."
                class="w-full px-0 py-3 border-0 border-b border-border bg-transparent text-text text-base placeholder:text-text-lighter/50 focus:outline-none focus:border-navy transition-colors resize-y"
              ></textarea>
            </div>

            {/* Submit — editorial style link/button */}
            <div class="pt-4">
              <button
                type="submit"
                class="inline-flex items-center gap-3 cursor-pointer group bg-transparent border-0 p-0"
              >
                <span class="text-[12px] uppercase tracking-[0.15em] font-medium text-accent group-hover:text-accent-hover">
                  Verstuur bericht
                </span>
                <span class="w-10 h-px bg-accent group-hover:w-16 transition-all duration-300"></span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
